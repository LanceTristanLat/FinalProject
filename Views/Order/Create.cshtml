@model FinalProject.Models.Order
@inject FinalProject.Data.ApplicationDbContext _context;

@{
    ViewData["Title"] = "Create";
}
<style>
    div.form-group {
        width: 450px;
    }
</style>
<br /> <br/>
<div class="text-center">
    <h1>Create New Order</h1>

    <h3>Kindly fill up the following to place an order.</h3>
</div>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <select asp-for="ProductName" class="form-control" id="order">
                    <option value="">Select one. . .</option>
                    <option value="Apple Watch band in White">Apple Watch band in White</option>
                    <option value="Apple Watch band in Black">Apple Watch band in Black</option>
                    <option value="Apple Watch band in Rose gold">Apple Watch band in Rose gold</option>
                    <option value="Iphones Adapter">Iphones Adapter</option>
                    <option value="Macbook Charger">Macbook Charger</option>
                    <option value="Iphones Charger Cable">Iphones Charger Cable</option>
                    <option value="Lightning Digital AV Adapter">Lightning Digital AV Adapter</option>
                    <option value="Wireless Charging Pads in Black">Wireless Charging Pads in Black</option>
                    <option value="Wireless Charging Pads in White">Wireless Charging Pads in White</option>
                    <option value="Ipad Case in Yello">Ipad Case in Yello</option>
                    <option value="Ipad Case in Black">Ipad Case in Black</option>
                    <option value="Ipad Case in Blush Pink">Ipad Case in Blush Pink</option>
                    <option value="Clear Phone Cases">Clear Phone Cases	</option>
                    <option value="Iphone Case in Leather">Iphone Case in Leather</option>
                    <option value="Iphone Case in Black">Iphone Case in Black</option>
                    <option value="Ipad Case in Blush Pink">Ipad Case in Blush Pink</option>

                </select>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNum" class="control-label"></label>
                <input asp-for="ContactNum" class="form-control" />
                <span asp-validation-for="ContactNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeOfPayment" class="control-label"></label>
                <select asp-for="ModeOfPayment"  class="form-control"asp-items="Html.GetEnumSelectList<ModeOfPayment>()"></select>
                <span asp-validation-for="ModeOfPayment" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group center">
                <input type="submit" value="Submit Order" class="btn btn-outline-dark btn-sm justify-content-center" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
