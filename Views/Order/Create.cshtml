@model FinalProject.Models.Order

@{
    ViewData["Title"] = "Create";
}
<style>
    div.form-group {
        width: 450px;
    }
</style>
<br /> <br/>
<div class="text-center">
    <h1>Create New Order</h1>

    <h3>Kindly fill up the following to place an order.</h3>
</div>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNum" class="control-label"></label>
                <input asp-for="ContactNum" class="form-control" />
                <span asp-validation-for="ContactNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeOfPayment" class="control-label"></label>
                <select asp-for="ModeOfPayment"  class="form-control"asp-items="Html.GetEnumSelectList<ModeOfPayment>()"></select>
                <span asp-validation-for="ModeOfPayment" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group center">
                <input type="submit" value="Submit Order" class="btn btn-outline-dark btn-sm justify-content-center" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
